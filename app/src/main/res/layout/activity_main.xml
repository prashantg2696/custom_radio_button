<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checkedButton="@id/male"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/gender_background_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/gender_text_selector"
            android:drawableTop="@drawable/ic_male"
            android:padding="16dp"
            android:text="@string/male"
            android:textAlignment="center"
            android:textColor="@color/gender_text_selector"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/gender_background_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/gender_text_selector"
            android:drawableTop="@drawable/ic_female"
            android:padding="16dp"
            android:text="@string/female"
            android:textAlignment="center"
            android:textColor="@color/gender_text_selector"
            android:textSize="16sp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/acceptDeclineRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checkedButton="@id/accept"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genderRadioGroup">

        <RadioButton
            android:id="@+id/accept"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/accept_background_selector"
            android:button="@android:color/transparent"
            app:drawableTint="@color/accept_text_selector"
            android:drawableStart="@drawable/ic_accept"
            android:padding="16dp"
            android:text="@string/accept"
            android:textAlignment="center"
            android:textColor="@color/accept_text_selector"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/decline"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/decline_background_selector"
            android:button="@android:color/transparent"
            app:drawableTint="@color/decline_text_selector"
            android:drawableStart="@drawable/ic_decline"
            android:padding="16dp"
            android:text="@string/decline"
            android:textAlignment="center"
            android:textColor="@color/decline_text_selector"
            android:textSize="16sp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>